@using ProcgEnemies.Controllers
@model Enemy

<div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
        <h1>Procedural Enemy Ideas</h1>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-3 well">
        <h2>Movement</h2>
        <h3>@Model.Movement.Name</h3>
        <p>
            @Model.Movement.Description
        </p>
    </div>
    <div class="col-md-3 well">
        <h2>Passive</h2>
        <h3>@Model.Passive.Name</h3>
        <p>
            @Model.Passive.Description
        </p>
    </div>
    <div class="col-md-3 well">
        <h2>Ability</h2>
        <h3>@Model.Ability.Name</h3>
        <p>
            @Model.Ability.Description
        </p>
    </div>
    <div class="col-md-3 well">
        <h2>Trigger</h2>
        <h3>@Model.Trigger.Name</h3>
        <p>
            @Model.Trigger.Description
        </p>
    </div>
</div>